{
  "name": "demo",
  "version": "1.0.0",
  "main": "index.js",
  "author": "lyna",
  "license": "MIT",
  "scripts": {
    "build": "yarn tailwindcss -i ./src/styles/input.css -o ./src/styles/output.css",
    "watch": "yarn tailwindcss -i ./src/styles/input.css -o ./src/styles/output.css --watch",
    "start": "yarn lite",
    "lite": "lite-server",
    "start:dev": "concurrently \"yarn watch\" \"yarn lite\""
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.7",
    "concurrently": "^9.1.2",
    "lite-server": "^2.6.1",
    "tailwindcss": "^4.0.7"
  }
}
